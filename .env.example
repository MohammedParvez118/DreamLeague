# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=Fantasy
DB_PASSWORD=your_database_password_here
DB_PORT=5432

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Email Configuration (Optional - for email verification)
# Gmail setup:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Factor Authentication
# 3. Generate App Password at https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# RapidAPI (Cricbuzz Cricket API)
# Get your key from https://rapidapi.com/cricketapilive/api/cricbuzz-cricket/
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=cricbuzz-cricket.p.rapidapi.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=3000
NODE_ENV=development

# Development Mode
# Set to 'true' to use mock data and skip email verification
# IMPORTANT: Set to 'false' in production!
DEV_MODE=false